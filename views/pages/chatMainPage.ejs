        <script>
            $(function () {
                var socket = io();
                $('form').submit(function(){
                    // Tell to the server your name in order to display it on the screen.
                    socket.emit('chat message', "<%= username %>" + ": + $('#input-message').val());
                                $('#input-message').val('');
                    return false;
                });
                socket.on('chat message', function(msg){
                    $('#chat-area').append($('<div class="card-body message-sent"><strong class="card-title" style="display: inline;">Card title</strong><small  class="pull-right text-muted"><i class="fa fa-clock-o"></i> 12 mins ago</small><hr><p class="card-text">' + msg + '</p></div>'));
                });
            });


            function logout(){
                // Use Jquery
                $.post("/logout", function(result){

                    console.log(result, result.success);
                    if(result && result.success){
                        window.location.href = "/";
                    }

                });

            }
